CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME) # Rule to build the executable

$(NAME): $(OBJ) # Rule to link the .o files into the executable

	$(CC) -o $@ $^

%.o: %.c # Rule to compile the .c files into .o files
	$(CC) -c $< -o $@

clean: # Rule to clean the build
	rm -f $(OBJ) $(NAME)
